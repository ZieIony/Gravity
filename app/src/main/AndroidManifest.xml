<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="tk.zielony.gravity">

    <application
        android:name="tk.zielony.gravity.GravityApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="tk.zielony.gravity.MenuActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="tk.zielony.gravity.GameActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="tk.zielony.gravity.settings.SettingsActivity"
            android:label="Settings"
            android:screenOrientation="portrait"/>
        <activity
            android:name="tk.zielony.gravity.AchievementsActivity"
            android:label="Achievements"
            android:screenOrientation="portrait"/>
    </application>

</manifest>